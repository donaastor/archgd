#!/bin/sh

[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources
xset s noblank
xset s noexpose
xset s 0 0
xset +dpms
xset dpms 0 180 0
numlockx &
xset r rate 250 30
xbindkeys &
/opt/kbswtb &
if ! pgrep -f xidlehook; then
  xidlehook --timer 600 'systemctl suspend -i' '' &
fi
picom --experimental-backends &
nitrogen --restore &
exec i3
